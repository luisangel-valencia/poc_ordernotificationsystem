<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp.MainPage"
             Title="Order Entry">

    <ScrollView>
        <VerticalStackLayout
            Spacing="15"
            Padding="30,20"
            VerticalOptions="Start">

            <Label
                Text="Submit Order"
                SemanticProperties.HeadingLevel="Level1"
                FontSize="32"
                FontAttributes="Bold"
                HorizontalOptions="Center"
                Margin="0,0,0,20" />

            <!-- Customer Information -->
            <Label Text="Customer Information" FontSize="20" FontAttributes="Bold" Margin="0,10,0,5" />
            
            <Entry
                x:Name="CustomerNameEntry"
                Placeholder="Customer Name (min 2 characters)"
                Text="{Binding CustomerName}"
                TextChanged="OnInputChanged" />
            <Label
                x:Name="CustomerNameError"
                Text=""
                TextColor="Red"
                FontSize="12"
                IsVisible="False"
                Margin="5,0,0,5" />

            <Entry
                x:Name="CustomerEmailEntry"
                Placeholder="Customer Email"
                Keyboard="Email"
                Text="{Binding CustomerEmail}"
                TextChanged="OnInputChanged" />
            <Label
                x:Name="CustomerEmailError"
                Text=""
                TextColor="Red"
                FontSize="12"
                IsVisible="False"
                Margin="5,0,0,5" />

            <!-- Order Items -->
            <Label Text="Order Items" FontSize="20" FontAttributes="Bold" Margin="0,20,0,5" />
            <Label Text="Add at least one item to your order" FontSize="12" TextColor="{StaticResource Gray500}" Margin="0,0,0,10" />

            <Entry
                x:Name="ProductIdEntry"
                Placeholder="Product ID (required)"
                Text="{Binding ProductId}"
                TextChanged="OnInputChanged" />
            <Label
                x:Name="ProductIdError"
                Text=""
                TextColor="Red"
                FontSize="12"
                IsVisible="False"
                Margin="5,0,0,5" />

            <Entry
                x:Name="ProductNameEntry"
                Placeholder="Product Name (optional)"
                Text="{Binding ProductName}" />

            <Entry
                x:Name="QuantityEntry"
                Placeholder="Quantity (positive number)"
                Keyboard="Numeric"
                Text="{Binding Quantity}"
                TextChanged="OnInputChanged" />
            <Label
                x:Name="QuantityError"
                Text=""
                TextColor="Red"
                FontSize="12"
                IsVisible="False"
                Margin="5,0,0,5" />

            <Entry
                x:Name="PriceEntry"
                Placeholder="Price (positive decimal)"
                Keyboard="Numeric"
                Text="{Binding Price}"
                TextChanged="OnInputChanged" />
            <Label
                x:Name="PriceError"
                Text=""
                TextColor="Red"
                FontSize="12"
                IsVisible="False"
                Margin="5,0,0,5" />

            <!-- Submit Button -->
            <Button
                x:Name="SubmitBtn"
                Text="Submit Order"
                SemanticProperties.Hint="Submits the order to the server"
                Clicked="OnSubmitClicked"
                HorizontalOptions="Fill"
                Margin="0,20,0,0"
                IsEnabled="True" />

            <!-- Loading Indicator -->
            <ActivityIndicator
                x:Name="LoadingIndicator"
                IsRunning="False"
                IsVisible="False"
                Color="{StaticResource Primary}"
                HorizontalOptions="Center"
                Margin="0,10,0,0" />

            <!-- Status Message -->
            <Label
                x:Name="StatusLabel"
                Text=""
                HorizontalOptions="Center"
                HorizontalTextAlignment="Center"
                FontSize="14"
                Margin="0,10,0,20" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
